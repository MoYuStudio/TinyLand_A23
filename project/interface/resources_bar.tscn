script/source = "
extends Control

@onready var resources_bar_list = preload(\"res://interface/resources_bar_list.tscn\")

@onready var v_scroll = $VScrollBar
@onready var container = $Container

@export var player_data : MoYuPlayerData

var update_list = []

func _ready():
	for resource in player_data.price:
		if player_data.price[resource] > 0:
			var list = resources_bar_list.instantiate()
			list.name = resource
			list.icon = load(\"res://icon/resource/\"+resource+\".png\")
			list.num = str(player_data.price[resource])
			container.add_child(list)
			update_list.append(resource)

func _physics_process(delta):
	# 滚动条
	container.position.y = - (v_scroll.value * 
							((container.size.y - v_scroll.size.y) / 100))
	
	# 资源更新
	for resource in update_list:
		container.get_node(resource+\"/Num/Label\").text = \\
							str(player_data.price[resource])
	
"

